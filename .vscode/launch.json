  "version": "0.2.0",
  "configurations": [
    {
      "cwd": "${workspaceRoot}",
      "name": "Listen for rdebug-ide",
      "remoteHost": "127.0.0.1",
      "remotePort": "1234",
      "remoteWorkspaceRoot": "${workspaceRoot}",
      "request": "attach",
      "type": "Ruby",
    },
    {
      "args": [],
      "cwd": "${workspaceRoot}",
      "debuggerPort": "1234",
      "name": "Slim Explorer command-line",
      "program": "slim_explorer",
      "request": "launch",
      "restart": true,
      "showDebuggerOutput": true,
      "stopOnEntry": false,
      "type": "Ruby",
    },
    {
      "args": [ "serve" ],
      "cwd": "${workspaceRoot}",
      "debuggerPort": "1234",
      "name": "Slim Explorer server",
      "program": "slim_explorer",
      "request": "launch",
      "restart": true,
      "showDebuggerOutput": true,
      "stopOnEntry": false,
      "type": "Ruby",
    },
  ]
}
